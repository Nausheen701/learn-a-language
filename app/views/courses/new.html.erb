<h1>Courses#new</h1>
<p>Find me in app/views/courses/new.html.erb</p>

<h3>Plain HTML</h3>
<form action="/courses" method="post">
    Language: <input type="string" name="course[language]">
    <br>
    Level: <input type="string" name="course[level]">
    <br>
    Age Group: <input type="string" name="course[age_group]">
    <br>
    Class Size: <input type="string" name="course[class_size]">
    <br>
    Location: <input type="string" name="course[location]">
    <br>
    Day: <input type="string" name="course[day]">
    <br>
    Time: <input type="string" name="course[time]"> 
    <br>
    <input type="submit" value="Create New Class">

</form>

<h3>Form Tag</h3>
<%= form_tag(courses_path) do %>

    <%= label_tag(:language) %>
    <%= range_field_tag(:language) %>

    <%= label_tag(:level) %>
    <%= range_field_tag(:level) %>

    <%= label_tag(:language) %>
    <%= range_field_tag(:language) %>

<% end %>

