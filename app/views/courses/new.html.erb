    <br>

    <%=  f.label :location %>
    <%=  f.text_field :location %>

    <br>

    <%=  f.label :day %>
    <%=  f.text_field :day %>

    <br>

    <%=  f.label :time %>
    <%=  f.time_field :time %>

    <br>

    <%= f.hidden_field(:teacher_id, value: "1") %>
    
    <%= f.submit %>

<% end%>

