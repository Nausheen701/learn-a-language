<h1>Courses#index</h1>
<p>Find me in app/views/courses/index.html.erb</p>

<br>
<% if @instructor %>
    <%= @instructor.first_name %> <%= @instructor.last_name %>'s Courses 
<% elsif @courses.empty? %>
    <h2>You do not have any courses just yet.</h2>
      
    <p>
    <%= link_to instructor_path(instructor) %>
    </p>
           
<% else %>
    <% @courses.each do |c| %>
        Language: <%= c.language %> <br>
        Level: <%= c.level %> <br>
        Age Group: <%= c.age_group %> <br>
        Class Size: <%= c.class_size %> <br>
        Location: <%= c.location %> <br>
        Day: <%= c.day %> <br>
        Start Time: <%= c.start_time %> <br>
        End Time: <%= c.end_time %> <br>
    <% end %>
<% end %>
<br>
