<h1>Students#index</h1>
<p>Find me in app/views/students/index.html.erb</p>

<% @students.each do |student| %>
  <p>
  <%= student.id %>-
  <%= link_to "#{student.to_s}", student_path(student) %>
 
  <% student.courses.each do |course| %>
    <li> <%= course.language %> - <%= course.level %></li>
    <% end %>

  </p>
  <% end %>

  <br>
<%= link_to "Log out", '/logout', method: 'destroy' %>
