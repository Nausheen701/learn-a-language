<h1>Students#edit</h1>
<p>Find me in app/views/students/edit.html.erb</p>

<%= form_with model: @student do |f| %> <br>
    <%= f.label "date_of_birth"%><br>
    <%= f.date_field :date_of_birth %><br>
    <br>
    <%= f.label "nationality" %><br>
    <%= f.text_field :nationality %><br>
    <br>
    <%= f.label "ethnicity" %><br>
    <%= f.text_field :ethnicity %><br>
    <br>
    <%= f.label "My native language" %><br>
    <%= f.text_field :native_language %><br>
    <br>
    <%= f.label "Other languages I speak fluently" %><br>
    <%= f.text_field :other_languages %><br>
    <br>
    <%= f.label "A little more about me" %><br>
    <%= f.text_area :bio %><br>
    <br>
    <%= f.submit %>
<% end %> 

<%= link_to "Log out", '/logout', method: 'destroy' %>
