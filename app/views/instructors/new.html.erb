    <%= f.date_field :date_of_birth %>
    <br>
    <br>
    <%= f.label "nationality" %>
    <br>
    <%= f.text_field :nationality %>
    <br>
    <br>
    <%= f.label "My ethnicity" %>
    <br>
    <%= f.text_field :ethnicity %>
    <br>
    <br>
    <%= f.label "My education" %>
    <br>
    <%= f.text_field :education %>
    <br>
    <br>
    <%= f.label "My teaching experience" %>
    <br>
    <%= f.text_field :teaching_experience %>
    <br>
    <br>
    <%= f.label "My native language" %>
    <br>
    <%= f.text_field :native_language %>
    <br>
    <br>
