<h1>Instructor Signup</h1>

<% if @instructor.errors.any? %>
  <div id="error_explanation">
    <h2>
    <%= pluralize(@instructor.errors.count, "error") %>
     prohibited this account from being saved:
    </h2>

    <ul>
      <% @instructor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @instructor do |f| %>
    <%= f.label "First Name" %>
    <%= f.text_field :first_name %>
    <br>
    <%= f.label "Last Name" %>
    <%= f.text_field :last_name %>
    <br>
    <%= f.label "Email" %>
    <%= f.text_field :email %>
    <br>
    <%= f.label "Username" %>
    <%= f.text_field :username %>
    <br>
    <%= f.label "password" %>
    <%= f.password_field :password%>
    <br>
    
    <%= f.submit %>
<% end %> 
