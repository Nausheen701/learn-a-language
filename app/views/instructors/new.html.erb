<h1>Instructor Signup</h1>

<% if @instructor.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@instructor.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @instructor.errors.full_messages.each do |msg| %>
