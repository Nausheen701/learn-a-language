




<h4>This is <%= "#{@instructor.to_s}'s" %> Instructor Profile (instructor#show)</h4>
<p> Name: <%= @instructor.first_name %> <%= @instructor.last_name %> </p> 
<p> Username: <%= @instructor.username %> </p>
<p> Email: <%= @instructor.email %> </p>
<p> Phone: <%= @instructor.phone_number %> </p>
<p> DOB: <%= @instructor.date_of_birth %> </p>
<p> Education: <%= @instructor.education %> </p>
<p> Teaching experience: <%= @instructor.teaching_experience %> </p>
<p> Nationality: <%= @instructor.nationality %> </p>
<p> Ethnicity: <%= @instructor.ethnicity %> </p>
<p> Native language: <%= @instructor.native_language%> </p>
<p> Other Languages: <%= @instructor.other_languages%> </p>
<p> Instructional languages: <%= @instructor.instructional_languages %> </p>
<p> Bio: <%= @instructor.bio %> </p>


<%= link_to "Edit profile", edit_instructor_path(@instructor) %>
