<h1>Instructors#edit</h1>
<p>Find me in app/views/instructors/edit.html.erb</p>

<%= form_with model: @instructor do |f| %>
    <br>
    <%= f.label "My date of birth" %>
    <br>
    <%= f.date_field :date_of_birth %>
    <br>
    <br>
    <%= f.label "Nationality" %>
    <br>
    <%= f.text_field :nationality %>
    <br>
    <br>
    
    <%= f.label "My native language" %>
    <br>
    <%= f.text_field :native_language%>
    <br>
    <br>
    <%= f.label "Other languages I speak fluently" %>
    <br>
    <%= f.text_field :other_languages %>
    <br>
    <br>
    <%= f.label "Language(s) I teach" %>
    <br>
    <%= f.text_field :instructional_languages %>
    <br>
    <br>
    <%= f.label "A little bit about my education and teaching experience" %>
    <br>
    <%= f.text_area :bio %>
    <br>
    <br>
    <%= f.submit %>
<% end %> 
